{
  "name": "monorepo-tsconfig",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "license": "MIT",
  "scripts": {
    "clean": "lerna run clean",
    "pretsc:front": "yarn run clean",
    "tsc:front": "tsc -b  ./packages/shared/tsconfig.front.json ./packages/front",
    "pretsc:fn": "yarn run clean",
    "tsc:fn": "tsc -b  ./packages/shared/tsconfig.json ./packages/functions",
    "build": "yarn tsc:front && yarn workspace front build && yarn tsc:fn",
    "b": "tsc -b  ./packages/shared/tsconfig.front.json ./packages/shared/tsconfig.node.json ./packages/front ./packages/functions",
    "b1": "tsc -b ./packages/front ./packages/functions"
  },
  "devDependencies": {
    "lerna": "^3.16.4"
  }
}
